<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TreeDataGridEx">

  <Design.PreviewWith>
    <local:TreeDataGridEx />
  </Design.PreviewWith>

  <Style Selector="local|TreeDataGridEx">

    <Setter Property="Template">

      <ControlTemplate>

        <TreeDataGrid Name="PART_TreeDataGrid"
                      AutoDragDropRows="{TemplateBinding AutoDragDropRows}"
                      CanUserResizeColumns="{TemplateBinding CanUserResizeColumns}"
                      CanUserSortColumns="{TemplateBinding CanUserSortColumns}"
                      ShowColumnHeaders="{TemplateBinding ShowColumnHeaders}">
        </TreeDataGrid>

      </ControlTemplate>
    </Setter>

  </Style>

</Styles>
