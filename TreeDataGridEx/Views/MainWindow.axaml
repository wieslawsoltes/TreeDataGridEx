<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TreeDataGridEx.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TreeDataGridEx.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/avalonia-logo.ico"
        Title="TreeDataGridEx">

  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <TabControl>

    <TabItem Header="TreeDataGridEx">

      <TreeDataGridEx ItemsSource="{Binding Data}">
        <TreeDataGridEx.Columns>
          <TreeDataGridTemplateColumn Header="Name" Width="*">
            <TreeDataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Name}" />
              </DataTemplate>
            </TreeDataGridTemplateColumn.CellTemplate>
            <TreeDataGridTemplateColumn.CellEditingTemplate>
              <DataTemplate>
                <TextBox Text="{Binding Name}" />
              </DataTemplate>
            </TreeDataGridTemplateColumn.CellEditingTemplate>
          </TreeDataGridTemplateColumn>
        </TreeDataGridEx.Columns>
      </TreeDataGridEx>

    </TabItem>

  </TabControl>
  
</Window>
